{% extends "layouts/base.njk" %}
{% set pageCriticalStyles = ['critical/home-critical.css'] %}
{% set pageScripts = ['../../js/script.js'] %}
{% set pageStylesheets = ['../../css/home.css'] %}

{% block content %}
    <section class="home-hero">
        <div class="container home-hero__inner">
            <div class="home-hero__heading-container">
                <h2 class="home-hero__heading split-by-letter" data-delay="0.03">{{hero.heading}}</h2> 
            </div>
        </div>
    </section>
    <section class="splitting" data-background="dark">
        <div class="container splitting-inner">
            <h2 data-state="in-view" class="split-by-letter splitting__heading section-heading" data-initial-delay="2" data-delay="0.05">{{splitting.heading}}</h2>
            {% for feature in splitting.content %}
                <a style="--delay: 2.7s" href="{{feature.to}}" class="splitting__feature {{feature.class}}" data-delay="{{feature.delay}}">{{feature.content}}</a>
            {% endfor %}
        </div>
    </section>
    <section class="stagger-mode">
        <div class="container stagger-mode__inner">
            <h2 class="split-by-letter stagger-mode__heading section-heading text-align-right scroll-element" data-delay="0.05">{{stagger_modes.heading}}</h2>
            <div class="stagger-mode__content">
                <select name="stagger-modes" class="stagger-mode__select" id="stagger-modes">
                    <option value="left" selected>Left</option>
                    <option value="right">Right</option>
                    <option value="center">Center</option>
                </select>
                <a data-stagger-mode="left" data-delay="{{stagger_modes.example.delay}}" class="stagger-mode__example" href="{{stagger_modes.example.to}}">{{stagger_modes.example.content}}</a>
            </div>
        </div>
    </section>
{% endblock %}